// File: address.h

#ifndef ADDRESS_H
#define ADDRESS_H
#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

//Class: Address
class Address
{
   private:
      string street;
      string city;
      string state;
      string zip;
   
   public:
      //Constructors
      Address();
      Address(string street,
              string city,
              string state,
              string zip);
            
      //Getters
      string getStreet() const { return street; }
      string getCity() const { return city; }   
      string getState() const { return state; }   
      string getZip() const { return zip; } 
      
      //Setters
      void setStreet(string street);
      void setCity(string city);
      void setState(string state);
      void setZip(string zip);
      
      //Display
      void display() const;        
};


#endif
